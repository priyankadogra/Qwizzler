@CHARSET "ISO-8859-1";

#inbox{
	padding:8px;
	/*margin-top: -202px;*/
	z-index:100001;
	background-color:#DEDEDE;
	border-radius:8px;
}

#mailControlBar{
	width:100%;
	height:30px;
	clear:both;
}
	
#mailControlBar button{
	float: left;
}

/*************Inbox*****************/
#messageList{
	width:100%;	
}

.read{
	background-color:transparent;
}

.unread{
	background-color:#f2f2f2;
}

.inboxRow{
	width:100%;
	height:20px;
	clear:both;
	padding-right:8px;
}

.inboxRow:hover{
	background-color:#88CFE6;
}

.inboxRowClickable{
	height:20px;
	cursor:pointer;
}

.checkBox{
	width:5%;
	float:left;
}

.fromUser{
	width:10%;
	float:left;
}

.subject{
	width:55%;
	float:left;
}

.timeStamp{
	width:25%;
	float:right;
	text-align:right;
}


/**********Viewing Message************/

#viewMessageFrom{
	width:90%;
	float:left;
	margin-bottom:10px;
}

#viewMessageSubject{
	width:100%;
	float:left;
	margin-bottom:10px;
}

#viewMessageBody{
	width:100%;
	float:left;
	margin-bottom:10px;
}

#messageButtons{
	width:200px;
	height:50px;
	margin-bottom:8px;
	margin-right:8px;
	position:absolute;
	bottom:0;
	right:0;
}

/************Send Note***************/

#newMessageTitle{
	width:90%;
	font-size:x-large;
	margin-bottom: 10px;
}

#sendReceiver{
	width:100%;
}

#receiverSuggestions{
	width:100%;
	position:absolute;
	color:black;
	background-color:#f2f2f2;
}

#autocompleteList{
	list-style:none outside;
	padding:0;
}

.autocompleteRow{
	
}

#sendSubject{
	width:100%;
}

#newMessageTextArea{
	width:100%;
	height:320px;
}